<div class="container mt-5" style="max-width: 600px;">
  <h2 class="mb-4">Editar Dados Cadastrais</h2>

  <form method="POST" action="/user/edit-profile">
    <div class="mb-3">
      <label for="fullname" class="form-label">Nome completo</label>
      <input type="text" id="fullname" name="fullname" class="form-control" value="{{user.fullname}}" required>
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" id="email" name="email" class="form-control" value="{{user.email}}" required>
    </div>

    <div class="mb-3">
      <label for="major_id" class="form-label">Curso</label>
      <select id="major_id" name="major_id" class="form-select" required>
        {{#each majors}}
          <option value="{{this.id}}" {{#if (eq this.id ../user.major_id)}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>

    <button type="submit" class="btn btn-success">Salvar alterações</button>
  </form>
</div>
