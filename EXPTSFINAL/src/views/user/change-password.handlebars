<div class="container mt-5" style="max-width: 500px;">
  <h2 class="mb-4">Alterar Senha</h2>

  <form method="POST" action="/user/change-password">
    <div class="mb-3">
      <label for="currentPassword" class="form-label">Senha atual</label>
      <input type="password" class="form-control" name="currentPassword" id="currentPassword" required>
    </div>

    <div class="mb-3">
      <label for="newPassword" class="form-label">Nova senha</label>
      <input type="password" class="form-control" name="newPassword" id="newPassword" required>
    </div>

    <div class="mb-3">
      <label for="confirmNewPassword" class="form-label">Repetir nova senha</label>
      <input type="password" class="form-control" name="confirmNewPassword" id="confirmNewPassword" required>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
  </form>
</div>
